<div class="card auth-card">
  <!-- Log in card view header -->
  <div class="card-header">
    <h2>Log in</h2>
  </div>

  <!-- Log in card view Body -->
  <div class="card-body">
    <%= form_with url: login_path do |f| %>

      <!-- Input Field Username -->
      <div class="mb-3 form-group">
        <%= f.text_field :username, class: "form-control", placeholder: "Username", required: true %>
      </div>

      <!-- Input Field Password -->
      <div class="mb-3 form-group">
        <%= f.password_field :password, class: "form-control", placeholder: "Password", required: true %>
      </div>

      <!-- Submit Button -->
      <div class="mb-3 actions">
        <%= f.submit "Log in", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>