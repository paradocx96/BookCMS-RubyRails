<h1>Books Catalog</h1>

<div id="books" class="my-3">
  <div class="row">

    <!-- Generate Books List -->
    <% @books.each do |book| %>
      <div class="col-sm-6 col-md-4 col-lg-3">

        <!-- Card View -->
        <div class="card mb-3" id="<%= dom_id book %>">

          <!-- Book Image -->
          <img src="https://img.freepik.com/free-vector/hand-drawn-flat-design-stack-books_23-2149342941.jpg" class="card-img-top" alt="book">

          <!-- Card Body Section -->
          <div class="card-body">

            <!-- Book Title -->
            <h5 class="card-title"><%= book.title %></h5>

            <!-- Book Author -->
            <p class="card-text"><%= book.author %></p>

            <!-- Single Book View Button-->
            <%= link_to "Show this book", book, class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
<br/>